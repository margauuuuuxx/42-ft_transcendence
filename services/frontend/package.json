{
  "name": "transcendence-frontend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run typescript:watch\"",
    "tailwind:watch": "npx @tailwindcss/cli -i ./style.css -o ./output.css --watch",
    "typescript:watch": "tsc --watch",
    "build": "npm run tailwind:build && npm run typescript:build",
    "tailwind:build": "npx @tailwindcss/cli -i ./style.css -o ./output.css --minify",
    "typescript:build": "tsc"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "concurrently": "^9.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  }
}
